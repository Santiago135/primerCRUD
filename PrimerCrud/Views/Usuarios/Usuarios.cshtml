@model PrimerCrud.Models.Persona
@{
    ViewBag.Title = "Verificar persona";
}

<body class="PEPE">
<h3>Verificar persona</h3>

    @using (Html.BeginForm("Usuarios", "Usuarios", FormMethod.Post, new { role = "form", @class = "" }))
    {
        @Html.LabelFor(d => d.Nombre)
        <br />
        @Html.TextBoxFor(d => d.Nombre, new { @class = "textbox" })
        <br />

        @Html.LabelFor(d => d.Apellido)
        <br />
        @Html.TextBoxFor(d => d.Apellido, new { @class = "textbox" })

        <br />
        <button type="submit" class="btn btn-success" style="margin-top:10px;">Añadir</button>
    }
</body>

